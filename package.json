{
  "name": "oc-testing",
  "version": "1.0.0",
  "description": "Code examples for testing OC components",
  "main": "index.js",
  "scripts": {
    "start": "oc dev components 3030",
    "test": "standard && npm run jest && mocha --timeout=20000",
    "jest": "jest -u --coverage",
    "jest:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opentable/oc-testing.git"
  },
  "keywords": [
    "opencomponents",
    "oc",
    "open",
    "components"
  ],
  "author": "Matteo Figus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opentable/oc-testing/issues"
  },
  "homepage": "https://github.com/opentable/oc-testing#readme",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-1": "^6.22.0",
    "chai": "^3.5.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "jest": "^19.0.2",
    "mocha": "^3.2.0",
    "nightmare": "^2.9.1",
    "request": "^2.79.0",
    "standard": "^8.6.0"
  },
  "dependencies": {
    "oc": "^0.35.2"
  },
  "standard": {
    "globals": [
      "after",
      "before",
      "describe",
      "it"
    ],
    "ignore": [
      "components/click-me/_package",
      "components/hello-world/_package",
      "*.spec.js"
    ]
  }
}
