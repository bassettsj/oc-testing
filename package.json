    "jest:watch": "jest --watch",
    "mocha": "mocha --timeout=5000",
    "standard": "standard",
    "start": "oc dev components 3030",
    "test": "npm run standard && npm run jest && npm run mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opencomponents/oc-testing.git"
  },
  "keywords": [
    "opencomponents",
    "oc",
    "open",
    "components"
  ],
  "author": "Matteo Figus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opencomponents/oc-testing/issues"
  },
  "homepage": "https://github.com/opencomponents/oc-testing#readme",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.0.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "jest": "^20.0.4",
    "mocha": "^3.4.2",
    "nightmare": "^2.10.0",
    "request": "^2.81.0",
    "standard": "^10.0.2"
  },
  "dependencies": {
    "oc": "^0.37.9"
  },
  "standard": {
    "globals": [
      "after",
      "before",
      "describe",
      "it"
